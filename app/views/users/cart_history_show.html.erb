<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <span>
        <%= link_to "マイページ", mypage_users_path %> > <%= link_to "注文履歴", mypage_cart_histories_users_path %> > お届け先変更
      </span>

      <h1 class="mt-3">注文履歴詳細</h1>

      <h4 class="mt-3">ご注文情報</h4>

      <hr>

      <div class="row">
        <div class="col-5 mt-2">
          注文番号
        </div>
        <div class="col-7 mt-2">
          <%= @cart_info[:code] %>
        </div>

        <div class="col-5 mt-2">
          注文日時
        </div>
        <div class="col-7 mt-2">
          <%= @cart_info[:updated_at] %>
        </div>

        <div class="col-5 mt-2">
          合計金額
        </div>
        <div class="col-7 mt-2">
          <%= @cart_info[:total_price] %>円
        </div>

        <div class="col-5 mt-2">
          点数
        </div>
        <div class="col-7 mt-2">
          <%= @cart_info[:quantity] %>点
        </div>

      </div>

      <hr>

      <div class="row">
        <% @cart_contents.each do |product| %>
        <div class="col-md-5 mt-2">
          <%= link_to product_path(product[0]), class: "ml-4" do %>
            <%= image_tag "/images/dummy.png", class: "img-fuild w-75" %>
          <% end %>
        </div>
        <div class="col-md-7 mt-2">
          <div class="flex-cloumn">
            <p class="mt-4"><%= product[1][:name] %></p>
            <div class="row">
              <div class="col-2 mt-2">
                数量
              </div>
              <div class="col-10 mt-2">
                <%= product[1][:quantity] %>
              </div>

              <div class="col-2 mt-2">
                小計
              </div>
              <div class="col-10 mt-2">
                ￥<%= product[1][:quantity] * product[1][:price] %>
              </div>

              <div class="col-2 mt-2">
                送料
              </div>
              <div class="col-10 mt-2">
                ￥<%= product[1][:shipping_cost] %>
              </div>

              <div class="col-2 mt-2">
                合計
              </div>
              <div class="col-10 mt-2">
                ￥<%= product[1][:product_total_price] %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
