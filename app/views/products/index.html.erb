<h1>Products#index</h1>
<!-- eachメソッドで繰り返し変数の中身をビューで表示させる-->
<% @products.each do |product| %>
  <%= product.name %>
  <%= product.description %>
  <%= product.price %>
  <%= link_to 'Show', product_path(product) %>
  <%= link_to 'Edit', edit_product_path(product) %>
<% end %>

<%= link_to 'New', new_product_path %>
